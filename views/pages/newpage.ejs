          </nav>
          <!-- End Sidebar navigation -->
        </div>
        <!-- End Sidebar scroll-->
      </aside>

      <div class="page-wrapper">
        <div class="contaienr-fluid">
          <form action=" " class="form admin-form">
            <div class="row mb-3 add_page_container">
              <div class="col-md-5 title_field">
                <label for="">Page title</label>
                <input
                  class="form-control"
                  type="text"
                  placeholder="Add titile"
                  name="home"
                />
              </div>
              <div class="col-md-7 title_url">
                <label for="">Page Url</label>
                <input
                  class="form-control"
                  type="url"
                  placeholder="Add Url"
                  name="home_url"
                />
              </div>
            </div>

            <div class="col-md-1 submitBtn" style="margin-left: auto">
              <div class="mt-3">
                <button class="text-white btn btn-success w-100" type="submit">
                  Submit
                </button>
              </div>
            </div>
          </form>
          <button
            class="text-white btn btn-danger add_more"
            aria-colspan="add_more"
          >
            Add More
          </button>
        </div>

        <footer class="footer text-center">
          <%- include('../partials/footer') %>
        </footer>
      </div>
    </div>
    <script>
      const container = document.querySelector(".admin-form");
      const add_more = document.querySelector(".add_more");
      const submitBtn = document.querySelector(".submitBtn");

      // increase field
      const addMoreField = (e) => {
        e.preventDefault();
        const row = container.querySelector(".row");
        const newRow = row.cloneNode(true);
        newRow.querySelectorAll("input").forEach((input) => {
          input.value = "";
        });

        container.insertBefore(newRow, submitBtn);
      };

      add_more.addEventListener("click", addMoreField);

      // generate slug
      const rows = document.querySelectorAll(".add_page_container");
      rows.forEach((row) => {
        let title = row.querySelectorAll(".title_field input");
        let url = row.querySelectorAll(".title_url input");

        title.addEventListener("input", (e) => {
          let value = e.target.value;
          url.value = value.trim().toLowerCase().replace(/\s+/g, "-");
        });
      });
    </script>
    <script src="./assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="./assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
